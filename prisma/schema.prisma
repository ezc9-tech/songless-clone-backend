generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum GameType {
  SONGLESS
  MOVIELESS
  GAMELESS
  CUSTOM
}

model User {
  id Int @id @default(autoincrement())
  username String @unique
  email String @unique
  passwordHash String


  streak Int @default(0)
  longestStreak Int @default(0)


  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt


  gameResults GameResult[]
}


model Game {
  id Int @id @default(autoincrement())
  name String @unique
  slug String @unique
  type GameType
  isActive Boolean @default(true)


  createdAt DateTime @default(now())


  puzzles DailyPuzzle[]
}


model DailyPuzzle {
  id Int @id @default(autoincrement())
  gameId Int
  date DateTime
  answer String


  createdAt DateTime @default(now())


  game Game @relation(fields: [gameId], references: [id])
  results GameResult[]


  @@unique([gameId, date])
  @@index([date])
}


model GameResult {
  id Int @id @default(autoincrement())
  userId Int
  puzzleId Int


  guesses Int
  completed Boolean
  timeTaken Int
  score Int


  createdAt DateTime @default(now())


  user User @relation(fields: [userId], references: [id])
  puzzle DailyPuzzle @relation(fields: [puzzleId], references: [id])
  guessesLog Guess[]


  @@unique([userId, puzzleId])
  @@index([userId])
  @@index([puzzleId])
}


model Guess {
  id Int @id @default(autoincrement())
  gameResultId Int
  guess String
  isCorrect Boolean
  guessNumber Int


  createdAt DateTime @default(now())


  gameResult GameResult @relation(fields: [gameResultId], references: [id])


  @@index([gameResultId])
}


model LeaderboardSnapshot {
  id Int @id @default(autoincrement())
  gameId Int
  date DateTime
}